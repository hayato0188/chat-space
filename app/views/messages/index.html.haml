.wrapper
  = render 'shared/side_bar'
  .chat
    .header
      .left-header
        .left-header__title
          = @group.name
        %ul.left-header__members
          %li.member
          %li.member
      %button.btn.btn-outline-primary{type: "button"} Edit
    .messages
      = render @messages
    .form
      = form_for [@group, @message], html: { id: 'new_message' } do |f|
        = f.text_field :content, class: 'form-control', placeholder: 'type a message'
        .input-group-append
          %button#button-addon2.btn.btn-outline-secondary{type: "button"}
            = f.label :image, class: 'form__mask' do
              = fa_icon 'image', class: 'far fa-image'
              = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'btn btn-primary input-message__form__submit', name: 'submitbutton'




